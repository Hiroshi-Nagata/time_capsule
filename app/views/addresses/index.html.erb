<% provide(:title, "登録アドレス一覧") %>

<%= link_to '新規アドレス登録', new_address_path, class: 'new_address_path' %>

<div class="address_index">
  <table>
    <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td>
              <form action="javascript:void(0)">
                <button type='submit' class="address" value='{#@address}' onclick="addressfunc(<%= address.id %>)"><%= address.name %></button>
              </form>
            </td>
          </tr>
        <% end %>
    </tbody>
  </table>
</div>

<div class="address_show" id="show"></div>
