<p>
  <strong><%= tm :address, :name %>:</strong>
  <%= @address.name %>
</p>

<p>
  <strong><%= tm :address, :email %>:</strong>
  <%= @address.email %>
</p>

<p>
  <strong><%= tm :address, :telephone %>:</strong>
  <%= @address.telephone %>
</p>

<div class="address_show_link">
  <%= link_to '編集', edit_address_path(@address), class: 'address_btn_edit' %>
  <%= link_to '削除', address_path, class: 'address_btn_destroy', method: :delete, data: { confirm: 'このアドレスを消去しますか?' } %>
</div>
